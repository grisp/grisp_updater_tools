{erl_opts, [no_debug_info]}.

{deps, [
    {getopt, "1.0.2"},
    termseal,
    % grisp_update_packager % Revert when grisp_update_packager is released to Hex.pm
    {grisp_update_packager, {git, "https://github.com/grisp/grisp_update_packager.git", {ref, "b4fcbe331670abb5fc786c636898d68e86f19171"}}}
]}.

{escript_incl_apps, [grisp_updater_tools]}.
{escript_main_app, grisp_updater_tools}.
{escript_name, grisp_updater_tools}.
{escript_emu_args, "%%! +sbtu +A1\n"}.

{post_hooks, [
    {escriptize, "cp _build/default/bin/grisp_updater_tools scripts/"}
]}.

{profiles, [
    {test, [
        {erl_opts, [debug_info]}
    ]}
]}.
